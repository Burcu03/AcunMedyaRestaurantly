                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa  fa-check-square-o"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-8">
                <div class="card-body">
                    <h3 class="card-title text-white">Sunulan Hizmet Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.Servicecount</h2>
                        <p class="text-white mb-0">Hizmet</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-database"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-7">
                <div class="card-body">
                    <h3 class="card-title text-white">Etkinlik Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.Event1count</h2>
                        <p class="text-white mb-0">Etkinlik</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa fa-cubes"></i></span>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-default">
                <div class="card-body">
                    <h3 class="card-title text-white">İletişim Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.Contactcount</h2>
                        <p class="text-white mb-0">Mesaj</p>
                    </div>
                    <span class="float-right display-5 opacity-5"><i class="fa  fa-envelope-o"></i></span>
                </div>
            </div>
        </div>
    </div>

