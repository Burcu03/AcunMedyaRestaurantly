
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-lg-3 col-sm-6">
            <div class="card gradient-9">
                <div class="card-body">
                    <h3 class="card-title text-white">Yemek Sayısı</h3>
                    <div class="d-inline-block">
                        <h2 class="text-white">@ViewBag.Productcount</h2>
                        <p class="text-white mb-0">Ürün</p>
                    </div>
